.record_container {
  width: 100%;
  height: 100%;
  position: relative;
  margin: 0 auto;
}

/**交易记录的title样式**/
.record_title {
  width: 94%;
  color: #FBB10A;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  position: relative;
  top: 0;
  left: 0;
  margin: 0 auto;
  border-bottom: 1rpx solid #7C6432;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.record_title text{
  line-height: 60rpx;
  text-align: center;
  display: block;
  margin: 8rpx auto 6rpx;
  flex: 1;
}
.trade_type {
  flex: 0.4;
  text-align: center;
  align-items: center;
}

/**交易列表的样式 --- 不使用背景图**/
.record_item {
  color: #fff;
  font-size: 24rpx;
  margin: 14rpx auto 20rpx;
  position: relative;
  width: 604rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.record_item text{
  display: block;
  text-align: center;
  flex: 1;
}
.trade_logo {
  width: 36rpx;
  height: 36rpx;
}