page{
  width:100%;
  height:100%;
  background-color: #0E1834;
}

.assets_container {
  width: 100%;
  height: 100%;
  background-color: #0E1834;
}

.assets_area {
  width: 638rpx;
  height: 466rpx;
  position: relative;
  top: 28rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-size: cover;
  background-image: url('http://pczh4pjuz.bkt.clouddn.com/bg_assets.png')
}

/**用户头像即用户名样式**/
.logo_box {
  width: 162rpx;
  height: 162rpx;
  border-radius: 50%;
  position: absolute;
  top: 23rpx;
  left: 53rpx;
}
.userLogo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.userName {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  width: 270rpx;
  height: 90rpx;
  overflow: hidden;
  position: absolute;
  top: 92rpx;
  left: 234rpx;
}
.myRank {
  display: block;
  width: 80rpx;
  color: #fff;
  text-align: center;
  font-size: 50rpx;
  position: absolute;
  top: 70rpx;
  right: 82rpx;
}
/**奖励和规则按钮样式**/
.myReward {
  width: 212rpx;
  height: 55rpx;
  position: absolute;
  top: 212rpx;
  left: 58rpx;
  background-size: cover;
  background-image: url('http://pczh4pjuz.bkt.clouddn.com/reward.png')
}
.gameRegular{
  width: 212rpx;
  height: 55rpx;
  position: absolute;
  top: 212rpx;
  right: 54rpx;
  background-size: cover;
  background-image: url('http://pczh4pjuz.bkt.clouddn.com/regular.png')
}

/**个人资产样式**/
.total_assets {
  width: 638rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: absolute;
  top: 320rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.assets_item{
  flex: 1;
  color: #fff;
  font-size: 24rpx;
  font-weight: normal;
  text-align: center;
}
.assets_item view{
  font-weight: normal;
  line-height: 40rpx;
}

/** 炫耀资产的页面 **/
.btn_show {
  width: 406rpx;
  height: 78rpx;
  position: absolute;
  top: 454rpx;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 4rpx;
}

/** 币种列表 **/
.profit_title {
  width: 636rpx;
  height: 40rpx;
  position: relative;
  top: 90rpx;
  left: 57rpx;
  background-size: cover;
  background-image: url('http://pcb8f4day.bkt.clouddn.com/new_profit_title.png');
}
.coin_area {
  width: 638rpx;
  position: relative;
  top: 110rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #232741;
}
.coin_list_title{
  width: 600rpx;
  height: 60rpx;
  color: #FBB10A;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 60rpx;
  letter-spacing: 4rpx;
  position: relative;
  left: 0;
  right: 0;
  margin: 0 auto;  
  border-bottom:1rpx solid #624F32;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.coin_item {
  height: 70rpx;
  width: 600rpx;
  color: #fff;
  margin: 0 auto;
  font-size: 24rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.coin_name {
  flex: 0.5;
  display: block;
  text-align: center;
}
.coin_amount,
.coin_price,
.coin_ratio {
  flex: 1;
  display: block;
  text-align: center;
}

/* 弹出菜单样式 */
#result {
  border: none;
  border-radius: 0;
  height: 45px;
  font-size: 18px;
  padding: 10px 0;
  line-height: 25px;
  background: #FFFFFF;
}

/*悬浮按钮样式*/
.float_btn {
  height: 66rpx;
  width: 66rpx;
  position: fixed;
  z-index: 100;
  bottom: 50rpx;
  right: 20rpx;
}
.float_btn image {
  height: 66rpx;
  width: 66rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.float_btn button{
  height: 66rpx;
  width: 66rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  opacity: 0;
  z-index: 10;
}